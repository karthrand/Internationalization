<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/language_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>
    
	<Button
		style="?android:attr/borderlessButtonStyle"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="@string/language_cn"
        android:layout_below="@id/language_toolbar"
		android:id="@+id/bn_simpleChinese"/>

	<Button
		style="?android:attr/borderlessButtonStyle"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="@string/language_traditional"
		android:layout_below="@id/bn_simpleChinese"
		android:id="@+id/bn_traditionalChinese"/>

	<Button
		style="?android:attr/borderlessButtonStyle"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="@string/language_en"
		android:layout_below="@id/bn_traditionalChinese"
		android:id="@+id/bn_english"/>

</RelativeLayout>

